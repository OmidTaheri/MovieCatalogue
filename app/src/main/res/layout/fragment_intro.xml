<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/directortitle"
            style="@style/LightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginRight="@dimen/material_component_cards_primary_title_top_padding"
            android:gravity="right"
            android:text="کارگردان : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/director"
            style="@style/EnglishLightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/material_component_cards_primary_title_top_padding"
            android:layout_marginRight="@dimen/material_layout_keylines_screen_edge_margin"
            android:gravity="left"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/directortitle"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"
            />


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/writertitle"
            style="@style/LightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginRight="@dimen/material_component_cards_primary_title_top_padding"
            android:gravity="right"
            android:text="نویسندگان : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/director"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/writer"
            style="@style/EnglishLightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/material_component_cards_primary_title_top_padding"
            android:layout_marginRight="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"
            android:gravity="left"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/writertitle"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/yeartitle"
            style="@style/LightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginRight="@dimen/material_component_cards_primary_title_top_padding"
            android:gravity="right"
            android:text="سال تولید : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/writer"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/year"
            style="@style/EnglishLightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/material_component_cards_primary_title_top_padding"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"
            android:gravity="left"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yeartitle" />


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/countrytitle"
            style="@style/LightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginRight="@dimen/material_component_cards_primary_title_top_padding"
            android:gravity="right"
            android:text="کشور تولید کننده : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/year"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/country"
            style="@style/EnglishLightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/material_component_cards_primary_title_top_padding"
            android:layout_marginRight="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"
            android:gravity="left"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countrytitle" />


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/actorstitle"
            style="@style/LightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginRight="@dimen/material_component_cards_primary_title_top_padding"
            android:gravity="right"
            android:text="بازیگران : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/actors"
            style="@style/EnglishLightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/material_component_cards_primary_title_top_padding"
            android:layout_marginRight="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"
            android:gravity="left"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actorstitle"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/awardstitle"
            style="@style/LightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginRight="@dimen/material_component_cards_primary_title_top_padding"
            android:gravity="right"
            android:text="جوایز : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actors"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"/>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/awards"
            style="@style/EnglishLightBody1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/material_component_cards_primary_title_top_padding"
            android:layout_marginRight="@dimen/material_layout_keylines_screen_edge_margin"
            android:layout_marginTop="@dimen/material_layout_keylines_screen_edge_margin"
            android:gravity="left"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awardstitle"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>