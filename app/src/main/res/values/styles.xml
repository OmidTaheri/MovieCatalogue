    <style name="SearchButtonStyle" parent="DarkBody1">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>

        <item name="android:layout_marginLeft">@dimen/material_component_dialogs_padding_around_buttons</item>
